{
  "name": "novel",
  "displayName": "novel",
  "description": "novel supporter",
  "version": "0.0.1",
  "publisher": "eirueirufu",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "commands": [
      {
        "command": "openFile",
        "title": "Open File"
      },
      {
        "command": "characters.refreshEntry",
        "title": "刷新",
        "icon": {
          "light": "media/light/refresh.svg",
          "dark": "media/dark/refresh.svg"
        }
      },
      {
        "command": "characters.createFile",
        "title": "创建文件",
        "icon": {
          "light": "media/light/document.svg",
          "dark": "media/dark/document.svg"
        }
      },
      {
        "command": "characters.createDirectory",
        "title": "创建文件夹",
        "icon": {
          "light": "media/light/folder.svg",
          "dark": "media/dark/folder.svg"
        }
      },
      {
        "command": "characters.deleteEntry",
        "title": "删除",
        "icon": {
          "light": "media/light/edit.svg",
          "dark": "media/dark/edit.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "novel",
          "title": "Novel",
          "icon": "media/dep.svg"
        }
      ]
    },
    "views": {
      "novel": [
        {
          "id": "novelCharacters",
          "name": "人物设定",
          "icon": "media/dep.svg",
          "contextualTitle": "人物设定"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "characters.createDirectory",
          "when": "view == novelCharacters",
          "group": "navigation"
        },
        {
          "command": "characters.refreshEntry",
          "when": "view == novelCharacters",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "characters.createFile",
          "when": "view == novelCharacters && viewItem == directory"
        },
        {
          "command": "characters.createDirectory",
          "when": "view == novelCharacters && viewItem == directory"
        },
        {
          "command": "characters.deleteEntry",
          "when": "view == novelCharacters"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "novelCharacters",
        "contents": "[新建一个人物设定](command:characters.createDirectory)"
      }
    ],
    "languages": [
      {
        "id": "novel",
        "extensions": [
          ".novel",
          ".nv"
        ],
        "icon": {
          "light": "./media/novel.jpg",
          "dark": "./media/novel.jpg"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "novel",
        "path": "./snippets.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "@types/node": "^20.3.2",
    "@types/vscode": "^1.79.1",
    "typescript": "^5.1.6"
  }
}