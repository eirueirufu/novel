{
  "name": "novel",
  "displayName": "novel",
  "description": "novel supporter",
  "version": "0.0.1",
  "publisher": "eirueirufu",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "configuration": {
      "title": "novel自定义配置",
      "type": "object",
      "properties": {
        "novel.highlightWords": {
          "type": "array",
          "default": [],
          "description": "高亮配置"
        },
        "novel.completionFilePath": {
          "type": "string",
          "default": "",
          "description": "提示文件"
        },
        "novel.openaiKey": {
          "type": "string",
          "default": "",
          "description": "openai的api key，可以自己在opanai官网生成"
        }
      }
    },
    "commands": [
      {
        "command": "openFile",
        "title": "打开文件"
      },
      {
        "command": "highlight.select",
        "title": "显示/取消高亮"
      },
      {
        "command": "gpt.quest",
        "title": "提问gpt"
      },
      {
        "command": "workspace.refreshEntry",
        "title": "刷新",
        "icon": {
          "light": "media/light/refresh.svg",
          "dark": "media/dark/refresh.svg"
        }
      },
      {
        "command": "workspace.createFile",
        "title": "新建文件",
        "icon": {
          "light": "media/light/document.svg",
          "dark": "media/dark/document.svg"
        }
      },
      {
        "command": "workspace.createDirectory",
        "title": "新建文件夹",
        "icon": {
          "light": "media/light/folder.svg",
          "dark": "media/dark/folder.svg"
        }
      },
      {
        "command": "workspace.deleteEntry",
        "title": "永久删除",
        "icon": {
          "light": "media/light/edit.svg",
          "dark": "media/dark/edit.svg"
        }
      },
      {
        "command": "completion.selectConfigFile",
        "title": "选择提示配置文件",
        "icon": {
          "light": "media/light/document.svg",
          "dark": "media/dark/document.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "novel",
          "title": "Novel",
          "icon": "media/dep.svg"
        }
      ]
    },
    "views": {
      "novel": [
        {
          "id": "novelWorkspace",
          "name": "全局工作区",
          "icon": "media/dep.svg",
          "contextualTitle": "全局工作区"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "highlight.select",
          "when": "editorLangId == 'novel'",
          "group": "navigation"
        },
        {
          "command": "gpt.quest",
          "when": "editorLangId == 'novel'",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "workspace.createDirectory",
          "when": "view == novelWorkspace",
          "group": "navigation"
        },
        {
          "command": "workspace.refreshEntry",
          "when": "view == novelWorkspace",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "workspace.createFile",
          "when": "view == novelWorkspace && viewItem == directory"
        },
        {
          "command": "workspace.createDirectory",
          "when": "view == novelWorkspace && viewItem == directory"
        },
        {
          "command": "workspace.deleteEntry",
          "when": "view == novelWorkspace"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "novelWorkspace",
        "contents": "[新建一个文件夹](command:workspace.createDirectory)"
      }
    ],
    "languages": [
      {
        "id": "novel",
        "extensions": [
          ".novel",
          ".nv"
        ],
        "icon": {
          "light": "./media/novel.jpg",
          "dark": "./media/novel.jpg"
        },
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "@fern-api/openai": "^0.0.32",
    "@types/node": "^20.3.2",
    "@types/vscode": "^1.79.1",
    "fuse.js": "^6.6.2",
    "nodejieba": "^2.6.0",
    "openai": "^3.3.0",
    "typescript": "^5.1.6"
  }
}
