{
	"scopeName": "source.novel",
	"patterns": [
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{
					"include": "#letter"
				},
				{
					"include": "#paren-expression"
				}
			]
		},
		"letter": {
			"match": "你|我|他|她|它|，|。|！|？|……|：",
			"name": "keyword.letter"
		},
		"paren-expression": {
			"begin": "“",
			"end": "”",
			"beginCaptures": {
				"0": {
					"name": "punctuation.paren.open"
				}
			},
			"endCaptures": {
				"0": {
					"name": "punctuation.paren.close"
				}
			},
			"name": "expression.group",
			"patterns": [
				{
					"include": "#expression"
				}
			]
		}
	}
}